<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
  <style>
    html,body { margin:0; height:100%; background:#000; color:#fff; font-family:system-ui,arial,sans-serif; }
    .wrap { height:100vh; display:grid; place-items:center; padding:16px; }
    model-viewer { width:90vw; height:80vh; background:#000; }
    .err { position:fixed; left:16px; bottom:16px; right:16px; background:#111; border:1px solid #333; padding:12px; border-radius:8px; display:none; white-space:pre-wrap; }
  </style>
</head>
<body>
  <div class="wrap">
    <model-viewer id="mv"
      src="SSD_T1/SSD_T1.gltf"
      alt="SSD_T1"
      camera-controls
      autoplay
      animation-loop
      exposure="1.2"
      shadow-intensity="1"
      shadow-softness="0.8"
      environment-image="neutral"
      loading="eager"
      reveal="auto"
      crossorigin="anonymous">
    </model-viewer>
  </div>
  <div id="err" class="err"></div>
  <script>
    const mv = document.getElementById('mv');
    const errBox = document.getElementById('err');
    function showErr(msg){ errBox.style.display='block'; errBox.textContent = msg; }

    mv.addEventListener('error', (e)=> showErr('model-viewer error: ' + (e?.detail?.type || e.type)));
    mv.addEventListener('model-visibility', (e)=> {
      if(!mv.modelIsVisible){ showErr('Model not visible. Check paths for .bin/textures inside SSD_T1/.'); }
    });
    // Helpful network hints in console:
    console.log('Expect to load:', [
      'SSD_T1/SSD_T1.gltf',
      'SSD_T1/SSD_T1.bin',
      'SSD_T1/textures/...'
    ]);
  </script>
</body>
</html>
